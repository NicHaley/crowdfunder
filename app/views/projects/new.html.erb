<h1>New Project</h1>

<%= form_for @project do |f| %>
	<div class="field">
		<%= f.label :name %><br/>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :description %><br/>
		<%= f.text_field :description %>
	</div>
	<div class="field">
		<%= f.label :tagline %><br/>
		<%= f.text_field :tagline %>
	</div>
	<div class="field">
		<%= f.label :photo %><br/>
		<%= f.text_field :photo %>
	</div>
	<p>Rewards</p>
	<%= f.fields_for :rewards do |reward_fields| %>
		<div class="field">
			<%= reward_fields.label :title %><br/>
			<%= reward_fields.text_field :title %>
		</div>
		<div class="field">
			<%= reward_fields.label :min_amount %><br/>
			<%= reward_fields.text_field :min_amount %>
		</div>
		<div class="field">
			<%= reward_fields.label :description %><br/>
			<%= reward_fields.text_field :description %>
		</div>
	<% end %>
 	<div class="action">
		<%= f.submit "Submit"%>
	</div>
<% end %>