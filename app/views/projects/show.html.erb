<h1><%= @project.name %></h1>

<p>
	<em><%= @project.tagline %></em>
</p>

<p>
	<%= image_tag(@project.photo, :height=> "300") %>
</p>

<p>
	<%= @project.description %>
</p>

<p>
	<%= @project.amount %>
</p>

<p>
	<strong>Start Date: </strong>
	<%= @project.start_date %>
</p>

<p>
	<strong>End Date: </strong>
	<%= @project.end_date %>
</p>


<h2>New Comment</h2>

<%= form_for([@project, @comment]) do |f| %>
	<div class="field">
		<%= f.label :post %>
		<%= f.text_area :post, size: "60x12" %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>